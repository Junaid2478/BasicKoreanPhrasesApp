<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="324dp"
        android:layout_height="649dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="54dp"
        android:layout_marginEnd="44dp"
        android:layout_marginBottom="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <Button
            android:id="@+id/hello"
            android:layout_width="119dp"
            android:layout_height="wrap_content"
            android:text="hello"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_row="0"
            android:onClick="buttonTapped"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/whatisyourname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="what is  your name"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_row="1"
            android:onClick="buttonTapped"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/mynameis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="my name is"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_row="1"
            android:onClick="buttonTapped"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/iunderstand"
            android:layout_width="108dp"
            android:layout_height="wrap_content"
            android:text="I understand"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_row="0"
            android:onClick="buttonTapped"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/idontunderstand"
            android:layout_width="73dp"
            android:layout_height="wrap_content"
            android:text="i dont understand"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_row="2"
            android:onClick="buttonTapped"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/thankyou"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="thank you"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_row="2"
            android:onClick="buttonTapped"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/canyouspeakenglish"
            android:layout_width="73dp"
            android:layout_height="wrap_content"
            android:text="can you speak english"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_row="3"
            android:onClick="buttonTapped"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/goodbye"
            android:layout_width="73dp"
            android:layout_height="wrap_content"
            android:text="goodbye"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_row="3"
            android:onClick="buttonTapped"
            app:layout_rowWeight="1" />
    </androidx.gridlayout.widget.GridLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="251dp"
        android:layout_height="31dp"
        android:layout_gravity="center"
        android:layout_marginStart="50dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="51dp"
        android:layout_marginBottom="6dp"
        android:text=" Korean Basic Phrases"
        android:textSize="20sp"
        android:visibility="visible"
        app:autoSizeMaxTextSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>